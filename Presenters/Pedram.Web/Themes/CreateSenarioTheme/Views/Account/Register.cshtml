@model Pedram.Web.Models.Users.Register.RegisterViewModel
    @using Pedram.Web.Models.Management;
    @using Pedram.Framework.StartUpClasses;
@{
    Layout = "~/Themes/CreateSenarioTheme/Views/Shared/_OneColumn.cshtml";
    ViewBag.Title = T( "Pedram.Register.Title" );
    var _UserContext = SmObjectFactory.Container.GetInstance<Pedram.Framework.Helpers.IContextHelper>();
    var CurrentContext = _UserContext.GetCurrentContext();
    var RTL = CurrentContext.MyLanguage.RightToLeft;

}


@using (Html.BeginForm( "Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" } ))
    {
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="row">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="row">
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary( "", new { @class = "text-danger" } )
           
            @if (!Configurations.UseEmailInsteadUserName)
                {

                <div class="item form-group">
                    @Html.LabelFor( m => m.UserName, new { @class = "control-label col-md-3" } )
                    <div class="col-md-9">
                        @Html.TextBoxFor( m => m.UserName, new { @class = "form-control" } )
                    </div>
                </div>
                }
            <div class="item form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="item form-group">
                @Html.LabelFor(m => m.FamilyName, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.FamilyName, new { @class = "form-control" })
                </div>
            </div>

             <div class="item form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
             <div class="item form-group">
                @Html.LabelFor( m => m.WorkDescription, new { @class = "control-label col-md-3" } )
                <div class="col-sm-9">
                    @Html.TextBoxFor( m => m.WorkDescription, new { @class = "form-control" } )
                </div>
            </div>
             <div class="item form-group">
                    @Html.LabelFor( m => m.BirthDay, new { @class = "control-label col-md-3" } )
                    <div class="col-sm-9">
                        <div class='input-group date' id='datetimepicker9'>
                            @Html.TextBoxFor( m => m.BirthDay, new { @class = "form-control" } )
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar">
                                </span>
                            </span>
                        </div>
                   </div>

                </div>
             <div class="item form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-3" })
                <div class="col-sm-9">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
             <div class="item form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-3" })
                <div class="col-sm-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div> 
             <div class="item form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-default" value="@T("Pedram.Register.Btn")" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
    }

@section Scripts {
<script type="text/javascript">
                $(function () {
                    $('#datetimepicker9').datetimepicker({
                        viewMode: 'years'
                    });
                });
</script>

    @*@Scripts.Render("~/bundles/jqueryval")*@
}
